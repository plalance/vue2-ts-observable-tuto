{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": false,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "lib": ["es2015", "dom"],
    "types": ["materialize-css", "datatables.net"]
  }
}